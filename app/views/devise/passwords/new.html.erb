<div class="container top-pd">
    <div class="row">
        <div class="col-md-4 col-sm-3 col-xs-1"></div>
        <div class="col-md-4 col-sm-6 col-xs-10">
            <h4>Enter your email address or username and we'll help you reset your password.</h4>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'input-no-pd'}) do |f| %>
                <%= devise_error_messages! %>

                <div class="form-group">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>

                <div class="form-group">
                    <%= f.submit "Continue", class: 'btn btn-primary btn-lg btn-danger width-100' %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>
        </div>
        <div class="col-md-4 col-sm-3 col-xs-1"></div>
    </div>
</div>
