<div class="module billing">
	<div class="col-xs-9">
	  <div class="row">
	    <div class="col-xs-8 panel">
	      <div class="col-xs-9">
	        <div class="panel-heading row">
	          <h3>Payment Deadline</h3>
	        </div>
	        <div class="panel-body row">
				  <% plan_year, billing_date = @employer_profile.billing_plan_year %>
				    <% if billing_date.present? %>
				      <h3>Enrollment Report</h3>
				      <span><%= billing_date.beginning_of_month %> - <%= billing_date.end_of_month %></span>
			        <br/>
			        <br/>
			        <table>
			          <tr>
			            <td style="padding-right: 10px;">Total Premium:</td>
			            <td><%= number_to_currency(@premium_amt_total || 0)%></td>
			          </tr>
			          <tr>
			            <td style="padding-right: 10px;">Employee Contributions:</td>
			            <td><%= number_to_currency(@employee_cost_total || 0) %></td>
			          </tr>
			          <tr>
			            <td style="padding-right: 10px;">Employer Contributions:</td>
			            <td><%= number_to_currency(@employer_contribution_total || 0) %></td>
			          </tr>
			        </table>
			        <br/>
				    <% end %>
	        </div>
	      </div>
	      <div class="col-xs-3">
	        <span class="icon-calendar-large icon-calendar-large-dims">
	          <h3 class="day">
	            <%= @billing_date %>
	          </h3>
	          <span class="month">
	            <%= TimeKeeper.date_of_record.strftime("%b") %>
	          </span>
	        </span>
	      </div>
	    </div>
	  </div>
	</div>
</div>



	<div class="col-xs-12 documents-tab">
	  <h1>Billing</h1>
	  <h4 class="starter">
	  	DC Health Link will mail you a monthly invoice at the beginning of each month. The invoice will include charges for the next month's premium payments, as well as any adjustments from previous months. You will make one premium payment each month, regardless of whether you offer your employees health coverage from more than one health insurance company or you offer dental coverage to your employees.
	  </h4>
  	<h3>DC Health Link offers multiple payment options including:</h3>
  	<h4>
  	<ol>
			<li>Pay Online - <%= link_to 'How to Pay Online', asset_path("pdf/employers_paying_your_premiums_online.pdf") , target: "_blank"%></li>
			<br/>
			<li>Pay by Phone
			<div class="row col-md-offset-1">
				855-532-LINK, select "Small Business Employer" then "Make a Payment"</li>
				<br/>
				<li>Pay by Mail
				<div class="row col-md-offset-1">
				DC Health Link</div>
				<div class="row col-md-offset-1">
				PO Box 97022</div>
				<div class="row col-md-offset-1">
				Washington, DC 20090</div></li>
				</h4>
  	</ol>
	    <h4>**Please include your account number on your check.</h4>
	    <h4>Check that your mailing address is up to date - click on Update Business Info.</h4>
  		</div>
	</div>

