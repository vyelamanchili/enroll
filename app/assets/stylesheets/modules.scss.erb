$primary-color: #007bc4;
$primay-active-button-text-color: #ffffff;
$primary-bold: 600;

.module {
	&.employer-welcome {
		.left-icon-section {
			margin-bottom: 2.5%;
			a {
				cursor: pointer;
				&:hover {
					text-decoration: underline;
				}
				.fa {
					color: #007bc4;
				}
			}
			&.important {
				margin-top: 7.5%;
				.pdf-image {
					img {
						max-height: 80px;
					}
				}
			}
			h4 {
				margin-top: 0;
			}
			.x-right.dn {
				margin-bottom: 5%;
			}
			.icon-left-download {
				padding: 10px 0;
			}
		}
		.close-right {
			.x {
				img {
					cursor: pointer;
				}
			}
		}
	}
  &.market-selection {
    padding: 0 15% 5%;
    .btn-primary {
      padding: 4%;
      font-size: auto;
      font-size: 13px;
      background-color: transparent;
      border: solid 1px #ccc;
      border-radius: 3px;
      text-transform: capitalize;
      &.active {
        background-color: $primary-color;
        a {
          color: $primay-active-button-text-color;
        }
      }
    }
  }
	&.modal-footer {
		.modal-sbc-link {
			text-align: left;
			position: relative;
			.fa.fa-file-pdf-o {
				margin: 2px auto auto 5px;
			}
			.sbc-text {
				font-size: 14px;
				margin-left: 10px;
				position: absolute;
				white-space: nowrap;
				top: 10px;
			}
		}
	}
	&.smart-plans {
		.panel-heading {
			background-image: none;
			background: #fff;
			color: #007bc4;
			h4 {
				font-weight: 400;
			}
		}
		.panel-footer {
			background-color: #fff;
			.btn-trans {
				background-color: #f2f2f2;
				&:hover {
					background-color: #fff;
				}
			}
		}
		margin-bottom: 15px;
		h5, .progress {
			margin: 0;
		}
		.progress {
			margin-bottom: 10px;
		}
		.key {
			margin-bottom: 8px;
			>.col-xs-3 {
				width: 20%;
				.tooltip {
					.tooltip-inner {
						max-width: 300px;
					}
				}
			}
			.ball {
				width: 15px;
				height: 15px;
				border-radius: 8px;
				display: inline-block;
				background-color: #eeac57;
				margin-right: 7px;
				top: 3px;
				position: relative;
				&.green {
					background-color: #5fb760;
				}
				&.red {
					background-color: #d75452;
					position: relative;
					vertical-align: baseline;
				}
			}
			label {
				display: inline;
				font-size:11px;
			}

		}
	}
	&.health_analytics {
		.overall-health {
			.panel-body {
				padding: 25px 15px 0;
			}
		}
		.medications, .conditions {
			.panel-heading {
				background: none;
			}
		}

		&.visits-estimate {
			.btn-trans {
				margin: auto;
				display: block;
				max-width: 200px;
			}
		}
		#healthConditions, #healthMedications {
			span {
				font-size: 20px;
				top: -4px;
			}
			.checkbox {
				margin-bottom: 4px;
			}
		}
		#continue {
			width: 100%;
		}
		.selectric-wrapper {
			top: -10px;
		}
		.family-member {
			.slider {
				margin-left: 5%;
				width: 90%;
				.slider-selection {
					background-image: none;
					filter: none;
					box-shadow: none;
					&.tick-slider-selection {
						background-image: none;
						filter: none;
					}
				}
				.slider-tick.round {
					display: none;
				}
				.slider-tick-label {
					font-size: 12px;
				}
			}
			.first-name, .middle-name, .last-name, .gender {
				text-transform: capitalize;
			}
			h5 {
				text-align: center;
			}
			span {
				color: #007bc4;
			}
			.panel-heading {
				border-bottom: solid 1px #eee;
			}
			.panel-footer {
				background-color: #d9edf7;
				border-color: #bce8f1
				span {
						color: #31708f;
					}
			}
		}
		input[type=checkbox] {
       display: none;
       + label > i.fa {
         color: #69A30D;
       }
     }
     .checkbox {
       display: block;
       margin: auto;
     }
     .checkbox {
       &>div {
         display: inline-block;
         margin: auto;
       }
     }
     .checkbox label {
       padding-left: 0;
     }
     .checkbox label label {
       display: inline;
       padding-left: 0;
     }
     .checkbox label label + span {
       display: inline-block;
       position: relative;
       text-transform: capitalize;
       font-size: 12px;
       top: -6px;
       left: 5px;
     }
     input[type=checkbox]:disabled + label i {
       color: #b7b7b7;
       cursor: not-allowed;
     }
     input[type=checkbox] + label i {
       &:first-of-type {
         display: none;

       }
       &:last-of-type {
         display: inline-block;
         width: 30px;
       }
     }
     input[type=checkbox]:checked + label i {
       &:first-of-type {
         display: inline-block;
         width: 30px;
       }
       &:last-of-type {
         display: none;
       }
     }
		 &.wellness-plans {
			 padding: 15px 0;
		 }
	}
}
