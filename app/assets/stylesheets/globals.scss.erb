@import "variables";
.module, .modal {
  &.flash {
    .col-xs-12 {
      max-width: 1170px;
      width: 100%;
      margin: auto;
      display: block;
      float: none;
    }
  }
  .no-vertical-padding {
    padding-top: 0;
    padding-bottom: 0;
  }
  .no-bottom-padding {
    padding-bottom: 0;
  }
  .selectric-labeled {
    padding: 0 0 0 10px;
    width: 100%;
    white-space: nowrap;
    &>* {
      display:table-cell;
      width:100%;
      text-align: center;
      vertical-align:middle;
      white-space: normal;
    }
    span {
      width:100%;
      max-width: 25%;
      display: inline-block;
      font-size: 10px;
      color: rgb(131, 135, 128);
      text-transform: uppercase;
      text-align: left;
    }
    .selectric-wrapper {
      width:100%;
      max-width: 75%;
      display: inline-block;
    }
  }
}
