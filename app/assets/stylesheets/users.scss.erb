}
.pass-strength {
    font-size: 14px;
    line-height: 23px;
    width: 135px;
}
.pass-bar {
    background-color: #69a30d;
    vertical-align: middle;
    display: inline-block;
    height: 5px;
    margin-left: 5px;
    width: 50px;
}
.error {
    display: none;
}
.has-error .error {
    display: block;
}

.tooltip_box {
    position:absolute;
    /*top:-85%;*/
    margin-top: -172px;
    /*bottom: -115px\9;*/ /* IE Specific */
    left: 100%;
    width:350px;
    padding:15px;
    padding-left: 20px;
    /*background:#fefefe;*/
    background-color: #002E60;
    color: #ffffff;
    font-size:.875em;
    border-radius:5px;
    /*box-shadow:0 1px 3px #ccc;
    border:1px solid #ddd;*/
    z-index: 1080;
}
.tooltip_box h4 {
    margin:0 0 10px 0;
    padding:0;
    font-weight:normal;
}
.tooltip_box::before {
    content: "\25C4";
    position:absolute;
    top:47%;
    left:-11px;
    font-size:14px;
    line-height:14px;
    /*color:#ddd;*/
    text-shadow:none;
    display:block;
    color: #002E60;
}
.invalid {
    background:url('<%= asset_path("icons/false-red.png") %>') no-repeat 0 50%;
    background-size: 13px;
    padding-left:22px;
    line-height:24px;
    /*color:#ec3f41;*/
    color: #FFF;
}
.valid {
    background:url('<%= asset_path("icons/checkmark-green.png") %>') no-repeat 0 50%;
    background-size: 13px;
    padding-left:22px;
    line-height:24px;
    /*color:#3a7d34;*/
    color: #bef470;
}
.tooltip_box {
    display:none;
}

.tooltip_box ul {
    /*padding-left: 15px;*/
    padding-left: 0;
    list-style-type: none;
}

.tooltip_box ul li {
    /*padding-left: 5px;*/
    padding-left: 20px;
    font-size: 13px;
}

.user_tooltip {
    margin-top: -90px;
}

