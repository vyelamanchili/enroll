.conpass-success {
    background-image: url('<%= asset_path("icons/checkmark-xs-green.png") %>');
    background-position: 50px 7px;
    background-repeat: no-repeat;
    background-size: 15px auto;
    /*color: #69a30d;*/
    color: #414141;
    font-size: 14px;
    height: 25px;
    line-height: 25px;
    width: 135px;
}

.conpass-false {
    background-image: url('<%= asset_path("icons/false-red.png") %>');
    background-position: 50px 4px;
    background-repeat: no-repeat;
    background-size: 17px auto;
    /*color: #e72b2d;*/
    color: #414141;
    font-size: 14px;
    height: 25px;
    line-height: 25px;
    width: 135px;
}

@media (max-width: 768px) {
    .tooltip_box {
        margin-top: -335px;
        left: 2px;
        padding: 10px;
        padding-left: 15px;
        width: auto;
    }
    .tooltip_box::before {
        left: 47%;
        bottom: -11px;
        top: auto;
        content: "\25BC"
    }
    .user_tooltip {
        margin-top: -160px;
    }
}

@media (max-width: 640px) {
    .user_tooltip {
        margin-top: -140px;
    }
}

@media (max-width: 480px) {
    
    .tooltip_box {
        margin-top: 0;
        top: -330px;
        left: 2px;
        padding: 10px;
        padding-left: 15px;
        width: auto;
    }
    .tooltip_box::before {
        left: 47%;
        bottom: -11px;
        top: auto;
        content: "\25BC"
    }
}

